<div class="container">
{{!-- block conatainer start --}}
<div class="row">
    <div class="col s6">
        <ul class="collection with-header hoverable">
            <li class="collection-header #ff9100 orange accent-3"><h2>These are good to go!</h2></li>
        {{!-- <h2 class="header">Burgers just BEGGING to be devoured!</h2> --}}
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col s6">
        <ul class="collection with-header hoverable #ff9100 orange accent-3">
            <li class="collection-header #ff9100 orange accent-3"><h2>The choice is yours...</h2></li>
        {{!-- <h2>Burgers that have already been devoured..</h2> --}}
            {{#each burgers}} 
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
{{!-- block container end --}}

    <div class="divider"></div>


{{!-- burger form card --}}

<div class="row">
    <div class="col s6 offset-s3">
      <div class="card #ffd180 orange accent-1 center hoverable">
        <div class="card-content white-text">
          <span class="card-title"> <u> Name Your Burger! </u> </span>
          <p>Burgers come in all shapes and sizes.. What kind of burger would you like?</p>
        </div>
        <div class="card-action form-group">
            <div class="input-field">
                <input placeholder="Name of Burger..." id="ca" type="text" class="validate" name="burger_name">
                <label for="ca">Burger Name:</label>
            </div>
            <button class="btn-large waves-effect waves-light" type="submit"> Add that Burger!!!</button>
        </div>
      </div>
    </div>
  </div>

{{!-- card form end --}}

