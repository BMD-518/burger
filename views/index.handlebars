    <div class="nav-wrapper #ff6d00 orange accent-4">
      <a href="#" class="brand-logo center">BURGERS!</a>
    </div>
  </nav>

<div class="container">
{{!-- block conatainer start --}}
<div class="row">
    <div class="col s6">
        <h2 class="header">Burgers just BEGGING to be devoured!</h2>
        <ul class="collection">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col s6">
        <h2>Burgers that have already been devoured..</h2>
        <ul class="collection">
            {{#each burgers}} 
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
{{!-- block container end --}}

    <div class="divider"></div>

{{!-- new burger form --}}

<div class="row">
    <form class="create-form col12">
        <h2 class="center">Name your burger!</h2>

        <div class="row form-group">
            <div class="input-field col s6 offset-s3 center">
                <input placeholder="Name of Burger..." id="ca" type="text" class="validate" name="burger_name">
                <label for="ca">Burger Name:</label>
            </div>
        </div>
    </form>
    <div class="center">
        <button class="btn-large waves-effect waves-light" type="submit"> Add that Burger!!!</button>
    </div>
</div>
</div>
